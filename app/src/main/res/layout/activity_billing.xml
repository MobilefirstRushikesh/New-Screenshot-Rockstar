<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_blue_primary"
    tools:context=".ui.fragments.BillingFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/billing_main_screen_rel"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/billing_rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/billing_btn_close"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="-16dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close_black"
                app:tint="@color/theme_accent_pink" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/billing_btn_restore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/montserrat"
                android:text="@string/restore_purchase"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/theme_accent_pink"
                app:cornerRadius="20dp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/billing_rel1"
            android:layout_marginBottom="15dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/billing_img_logo"
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/screenshot_logo_512" />

                <TextView
                    android:id="@+id/billing_txt_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/billing_img_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:text="@string/go_pro_get_much_more"
                    android:textAppearance="@style/TextStyle_Medium"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/billing_card_basic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/billing_txt_heading"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="28dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/theme_blue_primary_varient"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:contentPadding="16dp"
                    app:strokeColor="@color/theme_light_grey_E7E7E7"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/billing_card_basic_txt_headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jadoo_basic"
                            android:textAppearance="@style/TextStyle_Medium"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/billing_card_basic_txt_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/billing_card_basic_txt_headline"
                            android:layout_marginTop="5dp"
                            android:text="@string/basic_card_content"
                            android:textAppearance="@style/TextStyle_Normal"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/billing_rel_free"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/billing_card_basic_txt_desc"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/billing_card_basic_txt_free"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/billing_img_free_blank"
                                android:layout_alignBottom="@id/billing_img_free_blank"
                                android:text="@string/free"
                                android:textAppearance="@style/TextStyle_SemiBold"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/billing_img_free_blank"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/ic_check_blank_circle" />

                            <ImageView
                                android:id="@+id/billing_img_free_checked"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/ic_checked"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/billing_img_free_checked_active"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:background="@drawable/bg_subscription_active"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_tick"
                                android:visibility="gone"
                                app:tint="@color/white" />


                        </RelativeLayout>


                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:id="@+id/billing_free_active_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/billing_card_basic"
                    android:layout_marginBottom="-40dp"
                    android:layout_alignStart="@id/billing_card_basic"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/bg_subscription_active"
                    android:paddingHorizontal="8dp"
                    android:visibility="gone"
                    android:paddingVertical="2.5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active"
                        android:textAppearance="@style/TextStyle_Normal"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/billing_card_pro_yearly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/billing_card_basic"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:contentPadding="16dp"
                    app:cardBackgroundColor="@color/theme_blue_primary_varient"
                    app:strokeColor="@color/theme_light_grey_E7E7E7"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/billing_card_pro_yearly_txt_headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/jadoo_pro_yearly"
                            android:textAppearance="@style/TextStyle_Medium"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/billing_card_pro_yearly_txt_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/billing_card_pro_yearly_txt_headline"
                            android:layout_marginTop="5dp"
                            android:text="@string/jadoo_pro_content"
                            android:textAppearance="@style/TextStyle_Normal"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/billing_rel_yearly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/billing_card_pro_yearly_txt_desc"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/billing_card_pro_txt_yearly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/billing_img_pro_yearly_blank"
                                android:layout_alignBottom="@id/billing_img_pro_yearly_blank"
                                android:text="@string/price_year"
                                android:textAppearance="@style/TextStyle_SemiBold"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/billing_img_pro_yearly_blank"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/ic_check_blank_circle" />

                            <ImageView
                                android:id="@+id/billing_img_pro_yearly_checked"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/ic_checked"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/billing_img_pro_yearly_checked_active"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:background="@drawable/bg_subscription_active"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_tick"
                                android:visibility="gone"
                                app:tint="@color/white" />
                        </RelativeLayout>


                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:id="@+id/billing_yearly_active_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/billing_card_pro_yearly"
                    android:layout_marginBottom="-22dp"
                    android:layout_alignStart="@id/billing_card_pro_yearly"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/bg_subscription_active"
                    android:paddingHorizontal="8dp"
                    android:visibility="gone"
                    android:paddingVertical="2.5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active"
                        android:textAppearance="@style/TextStyle_Normal"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/billing_yearly_offer_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/billing_card_pro_yearly"
                    android:layout_marginBottom="-22dp"
                    android:layout_alignEnd="@id/billing_card_pro_yearly"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_subscription_active"
                    android:backgroundTint="@color/theme_accent_pink"
                    android:paddingHorizontal="8dp"
                    android:visibility="visible"
                    android:paddingVertical="2.5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="~20% off"
                        android:textAppearance="@style/TextStyle_Normal"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/billing_card_pro_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/billing_card_pro_yearly"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/theme_blue_primary_varient"
                    app:contentPadding="16dp"
                    app:strokeColor="@color/theme_light_grey_E7E7E7"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/billing_card_pro_monthly_txt_headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/jadoo_pro_monthly"
                            android:textAppearance="@style/TextStyle_Medium"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/billing_card_pro_monthly_txt_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/billing_card_pro_monthly_txt_headline"
                            android:layout_marginTop="5dp"
                            android:text="@string/jadoo_pro_content"
                            android:textAppearance="@style/TextStyle_Normal"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/billing_rel_pro_monthly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/billing_card_pro_monthly_txt_desc"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/billing_card_pro_monthly_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/billing_img_pro_blank_monthly"
                                android:layout_alignBottom="@id/billing_img_pro_blank_monthly"
                                android:text="@string/price_month"
                                android:textAppearance="@style/TextStyle_SemiBold"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/billing_img_pro_blank_monthly"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/ic_check_blank_circle" />

                            <ImageView
                                android:id="@+id/billing_img_pro_checked_monthly"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/ic_checked"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/billing_img_pro_checked_active"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="2dp"
                                android:background="@drawable/bg_subscription_active"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_tick"
                                android:visibility="gone"
                                app:tint="@color/white" />


                        </RelativeLayout>


                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:id="@+id/billing_monthly_active_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/billing_card_pro_monthly"
                    android:layout_marginBottom="-22dp"
                    android:layout_alignStart="@id/billing_card_pro_monthly"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/bg_subscription_active"
                    android:paddingHorizontal="8dp"
                    android:visibility="gone"
                    android:paddingVertical="2.5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active"
                        android:textAppearance="@style/TextStyle_Normal"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/billing_btn_proceed"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_below="@id/billing_card_pro_monthly"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/theme_accent_pink"
                    android:text="@string/proceed"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextStyle_Normal"
                    android:textSize="14sp"
                    app:cornerRadius="20dp"
                    app:elevation="0dp" />

                <TextView
                    android:id="@+id/billing_txt_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/billing_btn_proceed"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="14dp"
                    android:text="@string/term_of_service_privacy_policy"
                    android:textAppearance="@style/TextStyle_Normal"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/billing_loading_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:background="@color/theme_violet">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/billing_lottie_loading"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_centerHorizontal="true"
            app:lottie_rawRes="@raw/startup_loading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/billing_lottie_loading"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextStyle_Normal"
            android:text="@string/checking_subscription"/>
    </RelativeLayout>

</RelativeLayout>