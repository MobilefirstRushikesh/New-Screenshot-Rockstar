<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.InitSetupFragment"
    android:background="@color/theme_blue_primary">


    <RelativeLayout
        android:id="@+id/search_progress_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/init_frag_lottie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/startup_loading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/init_frag_lottie"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/setting_up_things"
            android:textAppearance="@style/TextStyle_Normal" />

    </RelativeLayout>

</FrameLayout>