<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue_primary_varient"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".ui.fragments.HiddenShotsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="visible"
        android:background="@color/theme_blue_tint"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_line_arrow"
            android:layout_marginStart="4dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/hidden_shots"
            android:layout_marginStart="4dp"
            android:textAppearance="@style/TextStyle_Normal"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/llHiddenOptions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/undo_hide_items_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_open_eye"
                android:contentDescription="@null"/>

            <ImageView
                android:id="@+id/ivSelectAll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_select_all"
                android:contentDescription="@null"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/selected_shots_count_tv"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp"
        android:background="@color/theme_blue_tint"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/theme_accent_pink"
        android:textSize="14sp"
        android:textAppearance="@style/TextStyle_Normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hidden_shots_rc_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:paddingTop="10dp"
        android:visibility="gone"
        app:spanCount="3" />

    <TextView
        android:id="@+id/empty_list_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_blue_tint"
        android:gravity="center"
        android:text="No hidden shots"
        android:textColor="@color/theme_accent_pink"
        android:textSize="16sp"
        android:textAppearance="@style/TextStyle_Normal"
        android:layout_marginTop="24dp"
        android:visibility="gone" />


</LinearLayout>
