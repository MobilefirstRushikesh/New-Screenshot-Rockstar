<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_check_blank"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@id/imageViewAvatar"
        app:srcCompat="@drawable/ic_check_blank" />

    <ImageView
        android:id="@+id/img_checked"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:tintMode="multiply"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@id/imageViewAvatar"
        app:srcCompat="@drawable/ic_checked"
        app:tint="@color/theme_accent_pink" />

    <ImageView
        android:id="@+id/rvuser_img_imageHasTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_svg_tag_circle"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@id/imageViewAvatar" />

    <RelativeLayout
        android:id="@+id/raw_album_lock_rel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/access_denied_foreGround"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageViewAvatar"
        app:layout_constraintEnd_toEndOf="@id/imageViewAvatar"
        app:layout_constraintStart_toStartOf="@id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="@id/imageViewAvatar">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:alpha="0.80"
            app:tint="@color/theme_accent_pink"
            android:src="@drawable/ic_lock_black" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>